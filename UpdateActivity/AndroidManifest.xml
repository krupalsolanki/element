<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ultramegatech.ey"
    android:versionCode="4"
    android:versionName="0.1.3" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/LightTheme" >
        <provider
            android:name="com.ultramegatech.ey.provider.ElementsProvider"
            android:authorities="com.ultramegatech.ey.provider" />

        <activity
            android:name="com.ultramegatech.ey.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ultramegatech.ey.PeriodicTableActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/LightTheme.NoTitleBar" />
        <activity
            android:name="com.ultramegatech.ey.ElementListActivity"
            android:label="@string/titleElementList" />
        <activity
            android:name="com.ultramegatech.ey.ElementDetailsActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.ultramegatech.ey.EyPreferenceActivity"
            android:label="@string/titlePreferences" />
        <activity
            android:name="com.ultramegatech.ey.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.ultramegatech.ey.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
    </application>

</manifest>